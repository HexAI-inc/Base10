# Database
DATABASE_URL=postgresql://base10_user:your_password@localhost:5432/base10_db

# Security
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days for offline-first

# SMS (Phase 3)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Redis (for SMS session state)
REDIS_URL=redis://localhost:6379/0

# Storage & CDN
STORAGE_BACKEND=local  # Options: 'local', 's3', 'minio'
LOCAL_STORAGE_PATH=./media
S3_BUCKET_NAME=base10-media
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_ENDPOINT_URL=  # For MinIO: http://localhost:9000
S3_CDN_DOMAIN=  # Optional CloudFront domain

# Cloudinary (Image Optimization)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Analytics
POSTHOG_API_KEY=phc_your_project_api_key
POSTHOG_HOST=https://app.posthog.com
TIMESCALE_URL=  # Optional: PostgreSQL with TimescaleDB extension

# Email (Phase 2)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@base10.education

# Push Notifications (Phase 2)
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-adminsdk.json

# CORS (for web app)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5000"]

# Environment
ENVIRONMENT=development
